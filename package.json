{
  "private": true,
  "workspaces": [
    "packages/*",
    "create-react-app/packages/react-scripts",
    "create-react-app/packages/react-dev-utils",
    "create-react-app/packages/babel-plugin-named-asset-import",
    "create-react-app/packages/babel-preset-react-app"
  ],
  "scripts": {
    "build": "tsc -p ./tsconfig.build.json",
    "clean": "rimraf packages/rewire/dist",
    "lint": "tslint -p ./",
    "start": "tsc -p ./tsconfig.build.json --watch"
  },
  "precommit": [
    "lint",
    "clean",
    "build"
  ],
  "engines": {
    "node": ">= 8.9"
  },
  "devDependencies": {
    "pre-commit": "^1.2.2",
    "prettier": "^1.12.1",
    "rimraf": "^2.6.2",
    "tslint": "^5.10.0",
    "tslint-config-airbnb": "^5.8.0",
    "tslint-config-prettier": "^1.12.0",
    "tslint-eslint-rules": "^5.2.0",
    "tslint-language-service": "^0.9.9",
    "tslint-plugin-prettier": "^1.3.0",
    "typescript": "^2.8.3"
  }
}
